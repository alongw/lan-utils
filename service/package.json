{
    "name": "lan-utils",
    "version": "1.0.0",
    "description": "lan-utils",
    "main": "src/app.ts",
    "repository": "https://github.com/alongw/lan-utils",
    "author": "alongw <alongw@alongw.cn>",
    "license": "AGPL-3.0",
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "format": "prettier --write --cache .",
        "dev": "nodemon --config nodemon.json",
        "dev:old": "nodemon -x node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm src/app.ts",
        "build": "npx webpack",
        "build:old": "npx eslint . && npx tsx ./script/build.ts",
        "build:nolint": "npx tsx ./script/build.ts",
        "start": "tsx ./src/app.ts",
        "start:ts": "ts-node-esm --experimental-specifier-resolution=node src/app.ts",
        "start:node": "node --es-module-specifier-resolution=node dist/app.js"
    },
    "devDependencies": {
        "@types/cors": "^2.8.15",
        "@types/express": "^4.17.18",
        "@types/fs-extra": "^11.0.4",
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.4.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^12.0.2",
        "eslint": "^8.55.0",
        "node-polyfill-webpack-plugin": "^3.0.0",
        "nodemon": "^2.0.22",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.7.0",
        "typescript": "^5.1.3",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4",
        "webpack-node-externals": "^3.0.0"
    },
    "lint-staged": {
        "*.{vue,js,ts,jsx,tsx,md,json}": "prettier --write"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "express": "^4.18.2",
        "lodash": "^4.17.21",
        "log4js": "^6.9.1",
        "socket.io": "^4.8.1",
        "uuid": "^11.0.3",
        "yaml": "^2.6.0"
    }
}
